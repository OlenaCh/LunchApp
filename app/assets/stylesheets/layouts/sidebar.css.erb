<!-- STYLES, SHARED AMONG ELEMENTS ON THE PAGE -->

<!-- Display -->

.sidebar-icon-wrapper, 
.sidebar-icon, 
.sidebar-item-close { display: none }

<!-- Paddings & Cursors -->

.sidebar-item, 
.admin-login-form {
  padding: 15px 0 15px 10px;
  cursor: pointer
}

<!-- Borders & Colors -->

.sidebar-item-close,
.sidebar-item a,
.admin-login-label { color: rgba(255, 242, 230, 1) }

.admin-login-form-wrapper input[type="TEXT"],
.admin-login-form-wrapper input[type="PASSWORD"] { 
  width: 130px;
  border: solid 2px rgba(137, 200, 106, 1); 
  border-radius: 8px;
  color: rgba(137, 200, 106, 1)
}

.btn.admin-login,
.sidebar-item:hover { background-color: rgba(255, 242, 230, 1) }

<!-- INDIVIDUAL STYLES -->

.sidebar { 
  width: 20%;
  height: 100%;
  position: fixed;
  background-color: rgba(137, 200, 106, 1)
}

.sidebar-item { font-size: 25px }

.sidebar-item:hover { border-radius: 10px 0 0 10px }

.admin-login-btn { width: 100% }

.btn.admin-login { height: 30px; margin: 3% 0 0 15% }

input[type="SUBMIT"].login { padding: 0 25%; color: rgba(137, 200, 106, 1) }


<!-- RESPONSIVE -->

@media only screen and (max-width: 414px) {
  .sidebar-icon-wrapper { display: block; padding: 30% }

  .sidebar-icon {
    width: 28px;
    height: 28px;
    display: block; 
    margin: 0; 
    padding: 0;
    background-image: url(<%= asset_path('layout_sidebar.png') %>);
    background-size: 32px;
    background-position: -2px -1px;
    border-radius: 5px;
    opacity: 0.8
  }
  
  .sidebar-items { display: none; padding: 10% }
  
  .sidebar-item, 
  .sidebar-item-close,
  .admin-login-form { width: calc(96.5%) }
  
  .sidebar-item-close {
    padding: 15px 0 15px 10px;
    font-size: 25px;
    text-align: right
  }
  
  .admin-login-form { display: block }
  
  .admin-login-label,
  .admin-login-input { width: 100% }
  
  .sidebar-item:hover {
  	border-radius: 10px
  }
}

@media only screen and (width: 768px) {
  .admin-login-form input[type="TEXT"],
  .admin-login-form-wrapper input[type="PASSWORD"] { width: 95px }
  
  .btn.admin-login {
    width: 95px;
    height: 25px;
    margin: 3% 0 0 2%
  }
}