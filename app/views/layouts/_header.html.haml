.navbar.navbar-default.navbar-static-top
  .container
    %button.navbar-toggle{"data-target" => ".navbar-responsive-collapse", "data-toggle" => "collapse", :type => "button"}
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    %a.navbar-brand LunchApp
    .navbar-collapse.collapse.navbar-responsive-collapse
      %ul.nav.navbar-nav.navbar-right
        - if signed_in?
          - if current_user.admin == true
            %li= link_to "Users", users_path
            %li= link_to "All orders", orders_path
            %li= link_to "Today orders", today_orders_path
          - else
            %li= link_to "Edit profile", edit_user_registration_path
            %li= link_to "Place order", new_order_path
          %li= link_to "All menu items", items_path
          %li
            = link_to "Sign out", destroy_user_session_path, method: "delete"