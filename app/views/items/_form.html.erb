<%= simple_form_for item, html: { multipart: true } do |f| %>
  <%= f.input :item_type, as: :radio_buttons, collection: types %>
  <%= f.input :title %>
  <%= f.input :price %>
  <%= f.input :fat %>
  <%= f.input :carbohydrate %>
  <%= f.input :protein %>
  <%= f.input :calorie %>
  <%= f.input :description %>
  <% if image %>
      <%= image_tag image %>
    <% end %>
  <%= f.input :image %>
  <%= f.submit "Place order!" %>
<% end %>