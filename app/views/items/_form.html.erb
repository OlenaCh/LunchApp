<%= simple_form_for item, :html => {:multipart => true} do |f| %>
  <%= f.input :item_type, as: :radio_buttons, collection: types %>
  <%= f.input :title %>
  <%= f.input :price %>
  <% if image %>
    <%= image_tag image %>
  <% end %>
  <%= f.input :image %>
  <%= f.submit "#{action}" %>
<% end %>