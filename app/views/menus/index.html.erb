<div class='popup-order-preview'>
  <div class='order-preview'>
    <div class='order-preview-close'><p>X</p></div>
    <% menus.each do |menu| %>
      <%# if today?(menu.weekday) %>
        <% menu.items.each do |item| %>
          <div class='order-preview-item hidden' data="<%= item.id %>">
            <p><%= item.title %></p>
            <p><%= item.price %></p>
            <p><%= item.calorie %></p>
            <div class='add-item-to-order'>+</div>
            <div class='remove-item-from-order'>-</div>
          </div>
        <% end %>
      <%# end %>
    <% end %>
    <p class='order-preview-calories'>Calories: </p>
    <p class='order-preview-sum'>Sum: </p>
    <div class='place-order'>Place order!</div>
  </div>
</div>

<h1>Week menus:</h1>
<% menus.each do |menu| %>
  <div class='menu-row'>
    <div class='weekday-menu'>
      <label class='item-label menu-new'><%= menu.weekday %>:</label>
      <ul class='menus-list'>
        <% menu.items.each do |item| %>
          <li class='menus-list-item'>
            <%= image_tag item.image, class: 'menus-list-item small' %>
            <span>
              <%= image_tag item.image, class: 'menus-list-item enlarged' %>
              <div class='shopping-details'>
                <p><%= item.title %> $<%= item.price %></p>
                <div class='preview-img'></div>
                <%# if today?(menu.weekday) %>
                  <div class='shopping-cart-img' data-id="<%= item.id %>" data-calorie="<%= item.calorie %>" 
                       data-price="<%= item.price %>"></div>
                <%# end %>
              </div>
              <div class='menu-item-details'>
                <p class='menu-item-details-close'>X</p>
                <p>Calories: <%= item.calorie %></p>
                <p>Fats: <%= item.fat %></p>
                <p>Carbohydrates: <%= item.carbohydrate %></p>
                <p>Proteins: <%= item.protein %></p>
                <p>Description. <%= item.description %></p>
              </div>
            </span>
          </li>
        <% end %>
      </ul>
      <%# if current_user.admin %>
        <div class='menus-list-item admin-panel'>
          <%= button_to "Edit", { action: "edit", id: menu.id }, method: :get %>
        </div>
      <%# end %>
    </div>  
  </div>  
<% end %>