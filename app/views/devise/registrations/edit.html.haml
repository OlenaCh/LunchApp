%h2 Edit profile

= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
  = f.input :name
  = f.input :email, required: true
 
  = f.input :organization_id, collection: Organization.all, as: :radio_buttons
  = link_to 'Add an organization', new_organization_path, method: :get
  
  = f.input :password, hint: 'Leave blank if you don\'t want to change it.', required: true
  - if @minimum_password_length
    = f.hint 'In other case it should be ' + @minimum_password_length.to_s + ' characters minimum'
  
  = f.input :password_confirmation, required: true
  = f.input :current_password, hint: 'We need your current password to confirm your changes.', required: true

  = f.submit "Update" 
  
%h4 Cancel my account

%p Unhappy? 
= button_to "Cancel my account", user_registration_path, data: { confirm: "Are you sure?" }, method: :delete

= link_to "Back", :back